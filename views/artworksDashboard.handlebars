    <h3>Current Artwork</h3>

    {{#each artworks as |artwork|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h5><a href="/artwork/{{artwork.id}}">{{artwork.title}}</a></h5>
      </div>
      <div class="col-md-4">
        <button class="btn btn-danger" data-id="{{artwork.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

