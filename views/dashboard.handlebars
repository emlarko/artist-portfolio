<div class="dashboard">
<div class="row">
  <div class="col-lg-6">
    <h2>Welcome, {{name}}!</h2>
  </div>
    <div class="col-lg-6">
      <h3><a href='/current-artworks'>View Current Artwork</a></h3>
  </div>
</div>

<div class="row mt-4 upload">
  <div class="col-md-6">
    <h3>Upload a New Artwork</h3>
       <button 
      id="upload_widget" 
      class="cloudinary-button">
        Upload files
    </button>

    <form class="form new-artwork-form">
      <div class="form-group">
        <input class="form-input" type="text" id="artwork-title" name="artwork-title" placeholder="Artwork Title" />
      </div>
      <div class="form-group">
        <textarea class="form-input" id="artwork-desc" name="artwork-desc" rows= "8" placeholder="Artwork Description"></textarea>
      </div>
      <div class="form-group">
       <label for="gallery">Choose a Gallery:</label>
        <select class="form-select"id="gallery" name="gallery">
        <option value="1">Painting</option>
        <option value="2">Photography</option>
        <option value="3">Black and White Photography</option>
        <option value="4">Craft</option>
        </select>
        </div>
      <button type="submit" class="btn btn-primary">Create</button>
    </form>
  </div>
    <div class="col-md-4">
         <img  
      id="uploadedimage" 
      src="" style="width:500px;height:auto;">
    </img> 
 </div>
<script src="/js/dashboard.js"></script>
</div>

    <script 
     src="https://widget.cloudinary.com/v2.0/global/all.js" 
     type="text/javascript">
    </script>

    <!-- local upload instantiation -->
    <script 
     src="/js/upload.js" 
     type="text/javascript">
    </script>
